<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.yue.nexttext.UI.EditTextViewWithPrefix
        android:id="@+id/editTextViewWithPrefix_emailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:backgroundTint="@color/colorSliver"
        android:tag="To " />

    <EditText
        android:id="@+id/editText_emailSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject"
        android:backgroundTint="@color/colorSliver"
        android:inputType="textEmailSubject"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editText_composeEmail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ems="10"
        android:background="@color/white"
        android:padding="16dp"
        android:gravity="top|start"
        android:inputType="textPersonName"
        android:hint="Compose email" />

</LinearLayout>